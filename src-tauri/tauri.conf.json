{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zoetrack",
  "version": "1.0.0",
  "identifier": "dev.zoetrack.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ZoeTrack",
        "width": 400,
        "height": 400,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "window-access",
          "windows": ["main", "external"],
          "permissions": ["core:window:allow-set-size"]
        },
        {
          "identifier": "files",
          "windows": ["main", "external"],
          "permissions": ["fs:default", "fs:allow-app-write-recursive"]
        },
        {
          "identifier": "updater",
          "windows": ["main", "external"],
          "permissions": ["updater:default", "updater:allow-check"]
        }
      ]
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "endpoints": ["https://raw.githubusercontent.com/wrrulosdev/zoe-track/refs/heads/main/version.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERBN0E2MjhBRjY1QjQ0OTUKUldTVlJGdjJpbUo2MnJvN2ZlZUYrSjI0ejQvZ0dKNm1IZkVKOHBhU2d0VWxrQnpycnp5dFQ1RXcK"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
